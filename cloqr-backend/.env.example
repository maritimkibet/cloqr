# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use DATABASE_URL (for Render, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual variables (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloqr
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Redis Configuration
# Option 1: Use REDIS_URL (for Render, Heroku, etc.)
# REDIS_URL=redis://user:password@host:port

# Option 2: Use individual variables (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password (optional)
# REDIS_TLS=true (set to true for production with external Redis)

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration (for OTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Student Email Verification
# Comma-separated list of allowed email domains
ALLOWED_EMAIL_DOMAINS=edu,ac.za,student.edu,university.edu

# Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8081

# Admin Credentials (for initial admin account)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_this_secure_password
